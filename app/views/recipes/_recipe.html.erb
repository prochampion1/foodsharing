<style media="screen">
  .image_div { background-image: url(<%= recipe.background_image %>); }
</style>

<div class="row">
  <div class="col-centered">

    <div class="image_div" style="width: 100%; height: 500px">
      <div style="background-color: rgba(255,255,255,0.8)">
        <h3><%= recipe.name %></h3>
        <p><%= recipe.short_description %></p>
      </div>
      <div class="card card-block col-md-5">
        <p><%= "thời gian nấu: #{recipe.cooking_time_min} phút" %></p>
        <p><%= "suất ăn dành cho: #{recipe.serving_num} người"%></p>
        <br>
        <p><%= recipe.description %></p>
        <%= social_share_button_tag(recipe.name) %>
      </div>
    </div>
  </div>
</div>
