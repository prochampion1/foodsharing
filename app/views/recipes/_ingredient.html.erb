<style media="screen">
  .image_div_2 { background-image: url(<%= @recipe.background_image %>); }
</style>

<div class="col-centered">
  <h3>Nguyên liệu</h3>
  <div class="image_div_2" style="width: 100%; height: 300px">
    <ul class="ingredient-list col-sm-12 col-md-2">
      <% @recipe.ingredients.each do |ingredient| %>
        <li><%= ingredient.name %></li>
      <% end %>
    </ul>
  </div>
</div>
